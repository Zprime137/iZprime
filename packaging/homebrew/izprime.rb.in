class Izprime < Formula
  desc "High-performance prime sieving library and CLI"
  homepage "https://github.com/Zprime137/iZprime"
  url "https://github.com/Zprime137/iZprime/releases/download/v@VERSION@/izprime-@VERSION@.tar.gz"
  sha256 "@SHA256@"
  license "MIT"

  depends_on "gmp"
  depends_on "openssl@3"

  def install
    system "make", "install", "PREFIX=#{prefix}", "ARCH_NATIVE=0", "TUNE_NATIVE=0"
  end

  test do
    assert_match "iZprime doctor", shell_output("#{bin}/izprime doctor")
  end
end
